{
    "name": "microfrontends",
    "private": true,
    "scripts": {
        "build": "npm run build:host && npm run build:remote",
        "serve": "npm run serve:host && npm run serve:remote",
        "build:host": "npm run --workspace apps/shell build",
        "build:remote": "npm run --workspace apps/logistics build",
        "serve:host": "npm run --workspace apps/shell preview",
        "serve:remote": "npm run --workspace apps/logistics preview",
        "dev:host": "npm run --workspace apps/shell dev",
        "dev:remote": "npm run --workspace apps/logistics dev",
        "dev:all": "concurrently \"npm run dev:host\" \"npm run dev:remote\"",
        "stop": "npx kill-port 5000 5001"
    },
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "dependencies": {
        "@emotion/react": "^11.14.0",
        "@emotion/styled": "^11.14.0",
        "@fontsource/roboto": "^5.1.1",
        "@hookform/resolvers": "^4.1.0",
        "@mui/icons-material": "^6.4.4",
        "@mui/lab": "^6.0.0-beta.28",
        "@mui/material": "^6.4.4",
        "@mui/x-date-pickers": "^7.27.0",
        "@reduxjs/toolkit": "^2.5.1",
        "dayjs": "^1.11.13",
        "logiflowerp-sdk": "^1.0.60",
        "notistack": "^3.0.2",
        "react": "^19.0.0",
        "react-dom": "^19.0.0",
        "react-hook-form": "^7.54.2",
        "react-redux": "^9.2.0",
        "react-router-dom": "^7.1.5",
        "reflect-metadata": "^0.2.2"
    },
    "devDependencies": {
        "@originjs/vite-plugin-federation": "^1.3.9",
        "concurrently": "^9.1.2",
        "kill-port": "^2.0.1",
        "@eslint/js": "^9.19.0",
        "@types/react": "^19.0.8",
        "@types/react-dom": "^19.0.3",
        "@vitejs/plugin-react": "^4.3.4",
        "eslint": "^9.19.0",
        "eslint-plugin-react-hooks": "^5.0.0",
        "eslint-plugin-react-refresh": "^0.4.18",
        "globals": "^15.14.0",
        "typescript": "~5.7.2",
        "typescript-eslint": "^8.22.0",
        "vite": "^6.1.0",
        "vite-tsconfig-paths": "^5.1.4"
    }
}