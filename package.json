{
    "name": "microfrontends",
    "private": true,
    "scripts": {
        "build": "npm run build:host && npm run build:remote",
        "serve": "npm run build && concurrently \"npm run serve:host\" \"npm run serve:remote\"",
        "build:host": "npm run --workspace apps/shell build",
        "build:remote": "npm run --workspace apps/logistics build",
        "serve:host": "npm run build:host && npm run --workspace apps/shell preview",
        "serve:remote": "npm run build:remote && npm run --workspace apps/logistics preview",
        "dev:host": "npm run --workspace apps/shell dev",
        "dev:remote": "npm run --workspace apps/logistics dev",
        "dev:all": "concurrently \"npm run dev:host\" \"npm run dev:remote\"",
        "stop": "npx kill-port 5000 5001"
    },
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "dependencies": {
        "shared-dependencies": "1.0.0"
    },
    "devDependencies": {
        "@originjs/vite-plugin-federation": "^1.3.9",
        "concurrently": "^9.1.2",
        "kill-port": "^2.0.1",
        "@eslint/js": "^9.19.0",
        "@types/react": "^19.0.8",
        "@types/react-dom": "^19.0.3",
        "@vitejs/plugin-react": "^4.3.4",
        "eslint": "^9.19.0",
        "eslint-plugin-react-hooks": "^5.0.0",
        "eslint-plugin-react-refresh": "^0.4.18",
        "globals": "^15.14.0",
        "typescript": "~5.7.2",
        "typescript-eslint": "^8.22.0",
        "vite": "^6.1.0",
        "vite-tsconfig-paths": "^5.1.4"
    }
}